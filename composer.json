{
    "name": "ngankt2/filament-packages",
    "description": "Monorepo chứa các package mở rộng cho Filament",
    "type": "project",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "path",
            "url": "filament-extend"
        },
        {
            "type": "path",
            "url": "filament-seo"
        },
        {
            "type": "path",
            "url": "filament-vn-location"
        },
        {
            "type": "path",
            "url": "wiz-helper"
        }
    ],
    "require": {
        "php": "^8.1",
        "ngankt2/filament-extend": "*",
        "ngankt2/filament-seo": "*",
        "ngankt2/filament-vn-location": "*",
        "ngankt2/wiz-helper": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "filament/filament": "^3.2",
        "pestphp/pest": "^2.0"
    },
    "scripts": {
        "test": "vendor/bin/pest"
    },
    "config": {
        "sort-packages": true,
        "preferred-install": "dist"
    }
}
